			private function makeNegative():void {

				payoffMatrix2 = createEmptyMatrix();
				
				for (var i:int=0;i<payoffMatrix1.length;i++){
					for (var j:int=0;j<payoffMatrix1[i].length;j++){
						var r:Rational=Rational.parse(payoffMatrix1[i][j]);
