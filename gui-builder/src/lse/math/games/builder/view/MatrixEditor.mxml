					p2_strat_cbg=0xffffff;
					p2_text_cbg=0xcccccc;
					
					p1_numb_editable=true;
					p1_strat_editable=true;
					p1_payoffs_editable=true;
					
					p1cbg=0xffffff;

				} else if (general_mode){
					
